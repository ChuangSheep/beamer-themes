\mode<presentation>

\setbeamertemplate{background}{
  \begin{tikzpicture}
    \setlength{\unitlength}{1mm}
    \useasboundingbox (0,0) rectangle(\the\paperwidth,\the\paperheight);

    \usebeamercolor{primary}

    \fill[color=bg] (0,0) rectangle (\the\paperwidth,\the\paperheight);

    \draw[draw=white, line width=4mm] (2,2) rectangle (7,7);

    \fill[color=bg] (6,3.5) rectangle (8,5.5);
    
    \ifnum\thepage>1\relax
      \fill[bg,opacity=1] (0,0) rectangle(\the\paperwidth,\the\paperheight);
    \fi
  \end{tikzpicture}
}

% Title page
\defbeamertemplate*{title page}{simple}[1][]
{ 
    \vskip1.2cm
    \vfill
    \hskip4cm
    \begin{beamercolorbox}[wd=10cm,sep=4pt,#1]{title page header}
      \vskip-0.3cm
      \usebeamerfont{title}\inserttitle\par
      \vskip0.15cm
      \usebeamerfont{subtitle}\insertsubtitle\par
    \end{beamercolorbox}
    \vfill


    \tikz[overlay, remember picture,
          shift=(current page.south west),
          x=(current page.south east), y=(current page.north west),]
    {
      \node[above right]at (0,0) {\usebeamercolor[fg]{date}\usebeamerfont{author}\insertauthor}; 
      \node[above left]at (1,0) {\usebeamercolor[fg]{author}\usebeamerfont{author}\insertdate}; 
    }
}


% Endpage
\setbeamertemplate{endpage}{
  \begin{frame}[plain]
    \tikz[overlay, remember picture,
    shift=(current page.south west),
    x=(current page.south east), y=(current page.north west),]
    {
      \usebeamercolor{primary}
      \fill[color=fg] (0,\the\paperheight/2) rectangle (\the\paperwidth,\the\paperheight);
      \usebeamercolor[bg]{primary}\usebeamerfont{endtitle}
      \node[above right] at (0.1,0.417) {DANKE}; 
      \usebeamercolor[fg]{primary}\usebeamerfont{endtitle sub}
      \node[below right] at (0.11,0.525) {Fürs Zuhören}; 
    }
  \end{frame}
}

% Page Number
\setbeamertemplate{footline}{
  \hfill
  \usebeamercolor[fg]{references}\usebeamerfont{references}
    \ifnum1<\thepage\relax
      \textbf{\insertframenumber} $\;$
    \fi
    \vskip0.25cm
}


\mode<all>
