% Title page
\defbeamertemplate*{title page}{simple}[1][]
{ 
    \vskip1.2cm
    \vfill
    \hskip4cm
    \begin{beamercolorbox}[wd=10cm,sep=4pt,#1]{title page header}
      \vskip-0.3cm
      \usebeamerfont{title}\inserttitle\par
      \vskip0.15cm
      \usebeamerfont{subtitle}\insertsubtitle\par
    \end{beamercolorbox}
    \vfill


    \tikz[overlay, remember picture,
          shift=(current page.south west),
          x=(current page.south east), y=(current page.north west),]
    {
      \node[above right]at (0,0) {\usebeamercolor[fg]{date}\usebeamerfont{author}\insertauthor}; 
      \node[above left]at (1,0) {\usebeamercolor[fg]{author}\usebeamerfont{author}\insertdate}; 
    }
}


