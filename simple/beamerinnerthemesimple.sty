% Frametitle
\defbeamertemplate*{frametitle}{simple}[1][]{
  \setlength{\unitlength}{1mm}
    \tikz[overlay, remember picture,
    shift=(current page.south west),
    x=(current page.south east), y=(current page.north west),]
    {
      \usebeamercolor{secondary}
      % Very hacky but it works
      % for the little rectangle slider under the frame title
      \node[rectangle,yshift=-0.6cm,yscale=0.22,xshift=0.25cm,xscale=0.95,fill=fg,below right] at (0.0509,0.95) {\usebeamercolor[fg]{secondary}\usebeamerfont{frametitle}\insertframetitle}; 

      \node[anchor=south,below right] at (0.0509,0.95) {\usebeamercolor{frametitle}\usebeamerfont{frametitle}\insertframetitle}; 
    }
}

% Itemize
\setbeamertemplate{itemize item}{\usebeamercolor[fg]{itemize item}$\blacksquare$}
\setbeamertemplate{itemize subitem}{\usebeamercolor[fg]{itemize item}$\blacktriangleright$}
\setbeamertemplate{itemize subsubitem}{}
\setlength\labelsep   {\dimexpr\labelsep + 0.25cm\relax}  
\setlength\leftmargini{\dimexpr\leftmargini + 0.25cm\relax}

% Enumerate
\setbeamertemplate{enumerate item}{
  \usebeamerfont{enumerate item projected}
  \usebeamercolor{secondary}
  \raisebox{-0.2em}{
    \tikz[scale=0.9,every node/.style={scale=0.9}]
    {
      \node[fill=fg,right]at (1,1) {
        \color{white}\insertenumlabel
      }; 
    }
  }
}


% Env Aliasing: iframe --- indentframe
% FIX: HOW TF TO PASS PARAMETER?
\newcommand{\indentframecontent}[1]{
  \begin{frame}
    \frametitle{#1}
    \usebeamerfont{normal text}
    \hspace*{0.5cm}
    \begin{minipage}[c][\the\paperheight - 6cm][t]{\textwidth-0.5cm}
      \BODY
    \end{minipage}
  \end{frame}
}
\NewEnviron{indentedframe}[1][]{
  \indentframecontent{#1}
}
\NewEnviron{iframe}[1][]{
  \indentframecontent{#1}
}




